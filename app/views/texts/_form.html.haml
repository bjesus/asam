= form_for(@text) do |f|
  - if @text.errors.any?
    #error_explanation
      %h2
        = pluralize(@text.errors.count, "error")
        prohibited this text from being saved:
      %ul
        - @text.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :user_id
    %br/
    = f.text_field :user_id
  .field
    = f.label :content
    %br/
    = f.text_area :content
    = f.text_area :tag_list
  .actions
    = f.submit
