%p#notice= notice

%span.breadcrumb(style="clear: both;")
  = "טקסטים >"
  - @text.tags_on(:author).each do |author|
    = author.name
    %hr
%h1= @text.name
%span(style="float: left;")= "(גירסה #{@text.versions.count+1})"
%hr(style='width: 100%; clear: both;')
.breadcrumb
  = "תגיות: "
  - @text.tags.each do |tag|
    %a.tag(href='/tags/#{tag.name}')= tag.name
.breadcrumb
  %hr


.admin-box(style="float: left;")
  %span.edit-btn= link_to "עריכה", edit_text_path(@text)
  %span.delete-btn= link_to 'מחיקה', @text, :confirm => 'וואלה אתם בטוחים?', :method => :delete

:textile
  #{@text.content}

- @text.images.each do |image|
  %hr
  %h3= image.photo_file_name
  %p= image.description
  = link_to "הורדה", image.photo.url
  // http://stackoverflow.com/questions/179315/downloading-docx-from-ie-setting-mime-types-in-iis
  - if (image.photo_content_type == 'application/msword')
    = link_to("תצוגה מקדימה", '#', html_options = {:class => 'toggle-preview'})
    %br
    %iframe{'src' => "http://docs.google.com/viewer?url=http://library.drorisrael.org.il"+image.photo.url+"&embedded=true",
          'width' => '650px', 'height' => "400px"}

:javascript
  $('.toggle-preview').click(function() {
    $(this).next().next().toggle('slow', function() {
    return false
    });
  });
